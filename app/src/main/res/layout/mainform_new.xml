<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="#fff">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:weightSum="1">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal">

         <TextView
             android:id="@+id/txtUname"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textColor="@color/black"
             android:text=""
             android:textSize="15dp"
             android:layout_margin="10dp"
             android:textAlignment="center"
             android:gravity="center"
             android:textStyle="bold"
             android:fontFamily="sans-serif-light"/>

     </LinearLayout>

  <LinearLayout
      android:id="@+id/ll1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_weight=".5"
      android:weightSum="1"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp">

      <android.support.v7.widget.CardView
          android:layout_weight=".5"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/cv_one"
          android:layout_marginLeft="35dp"
          android:layout_marginRight="5dp"
          app:cardBackgroundColor="#5dd9f1"
          android:layout_marginBottom="10dp"
          app:cardElevation="8dp">
          <LinearLayout
              android:layout_gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/ll_1"
              android:orientation="vertical"
              android:layout_margin="10dp"
              android:layout_weight=".5">

              <ImageView
                  android:id="@+id/img1_vehicle_intimation"
                  android:layout_height="40dp"
                  android:layout_marginTop="20dp"
                  android:layout_width="40dp"
                  android:src="@drawable/dd1"
                  android:layout_gravity="center" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Vehicle Intimation"
                  android:textColor="#000"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:textSize="15dp"
                  android:fontFamily="sans-serif-light"
                  android:textStyle="normal" />

          </LinearLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_weight=".5"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/cv_two"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="35dp"
          app:cardBackgroundColor="#92dff3"
          android:layout_marginBottom="10dp"
          app:cardElevation="8dp">
      <LinearLayout
          android:layout_gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/ll_2"
          android:orientation="vertical"
          android:layout_margin="10dp"
          android:layout_weight=".5">

          <ImageView
              android:id="@+id/img2_odometer_reading"
              android:layout_height="40dp"
              android:layout_marginTop="20dp"
              android:layout_width="40dp"
              android:src="@drawable/icon"
              android:layout_gravity="center" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Odometer Reading"
              android:textColor="#000"
              android:textAlignment="center"
              android:gravity="center"
              android:textSize="15dp"
              android:fontFamily="sans-serif-light"
              android:textStyle="normal" />

      </LinearLayout>

 </android.support.v7.widget.CardView>


         <android.support.v7.widget.CardView
             android:layout_weight=".5"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/cv_three"
             android:layout_marginLeft="35dp"
             android:layout_marginRight="5dp"
             app:cardBackgroundColor="#b7e9f7"
             android:layout_marginBottom="10dp"
             app:cardElevation="8dp">
             <LinearLayout
                 android:layout_gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/ll_3"
                 android:orientation="vertical"
                 android:layout_margin="10dp"
                 android:layout_weight=".5">

                 <ImageView
                     android:id="@+id/img3_alerts"
                     android:layout_height="40dp"
                     android:layout_marginTop="20dp"
                     android:layout_width="40dp"
                     android:src="@drawable/danger"
                     android:layout_gravity="center" />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Alerts"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="15dp"
                     android:gravity="center"
                     android:fontFamily="sans-serif-light"
                     android:textStyle="normal" />

             </LinearLayout>

         </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:layout_weight=".5"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/cv_four"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="35dp"
             app:cardBackgroundColor="#dbf3fa"
             android:layout_marginBottom="10dp"
             app:cardElevation="8dp">
             <LinearLayout
                 android:layout_gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/ll_4"
                 android:orientation="vertical"
                 android:layout_margin="10dp"
                 android:layout_weight=".5">

                 <ImageView
                     android:id="@+id/img4_violation"
                     android:layout_height="40dp"
                     android:layout_marginTop="20dp"
                     android:layout_width="40dp"
                     android:src="@drawable/checklist"
                     android:layout_gravity="center" />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Violations"
                     android:gravity="center"
                     android:textColor="#000"
                     android:textAlignment="center"
                     android:textSize="15dp"
                     android:fontFamily="sans-serif-light"
                     android:textStyle="normal" />

             </LinearLayout>

         </android.support.v7.widget.CardView>
     </LinearLayout>
 </LinearLayout>
</ScrollView>